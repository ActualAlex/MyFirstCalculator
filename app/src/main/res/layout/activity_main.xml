<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rgbcircles.ru.myfirstcalculator.MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:fontFamily="sans-serif"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:text="0"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_delet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/button_del" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="C"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <ImageButton
            android:id="@+id/button_sqrt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@drawable/fileds"
            android:cropToPadding="false"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/button_sqrt"
            tools:scaleType="fitCenter" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="/"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="7"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="8"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="9"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button_mult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="X"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="4"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="6"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button_min"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="-"
            android:textColor="@android:color/background_light"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="2"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="3"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="+"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="."
            android:textColor="@android:color/background_light"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button_negate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="+/-"
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button_equls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fileds"
            android:onClick="onButtonClick"
            android:text="="
            android:textColor="@android:color/background_light"
            android:textSize="26sp" />

    </LinearLayout>


</LinearLayout>
